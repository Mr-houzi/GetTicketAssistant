<view>
    <form class="form">
        <text>学号：</text>
        <input type="text" name="number" bindinput="numInput" class="form-number" placeholder="请输入您的学号"/>
        <text>密码：</text>
        <input type="password" name="password" bindinput="passInput" class='form-password' placeholder='请输入您的密码'/>
        <text style='font-size:30rpx;'>*绑定时间较长，请耐心等待</text>
        <button type="primary" size="{{defaultSize}}" bindtap="bindingNum" form-type="submit" hover-class="other-button-hover" disabled="{{disabled}}">绑定</button>
    </form>
</view>