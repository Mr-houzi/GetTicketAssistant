/* pages/index/qrcode/qrcode.wxss */
page{
    height: 100%;
    background-color: whitesmoke;
}
.title{
    text-align: center;
    margin: 30rpx 0;
    font-size: 50rpx;
}
.qrcode{
    /*background: red;*/
    margin: 80rpx 0;
}
.qrcode image{
    height: 500rpx;
    width: 500rpx;
    margin: 0 auto;
    text-align: center;
    display: block;
}
.location{
    background-color: #C3C2C2;
    margin: 80rpx 130rpx;
    border-radius: 0.3rem;
    border: 1rpx solid gray;
}
.location text{
    text-align: center;
    font-size: 50rpx;
    margin: 0 auto;
    display: block;
}